<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.sparx1126.scoutingapp2016.fragments.Benchmarking.SoftwareFragment">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Where does this team want to start in auto?"
            android:textSize="@dimen/body_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/divider_horizontal_bright">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/horiz_margin"
            android:text="Spy"
                android:textSize="@dimen/body_text_size" />

            <ToggleButton
                android:id="@+id/spy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/horiz_margin"
                android:textOff="No"
                android:textOn="Yes" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/horiz_margin"
                android:text="Neutral Zone"
                android:textSize="@dimen/body_text_size" />

            <ToggleButton
                android:id="@+id/neutralStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/horiz_margin"
                android:textOff="No"
                android:textOn="Yes" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Where does this team want to end in auto?"
            android:textSize="@dimen/body_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/divider_horizontal_bright">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/horiz_margin"
                android:text="Courtyard"
                android:textSize="@dimen/body_text_size" />

            <ToggleButton
                android:id="@+id/courtyard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/horiz_margin"
                android:textOff="No"
                android:textOn="Yes" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/horiz_margin"
                android:text="Neutral Zone"
                android:textSize="@dimen/body_text_size" />

            <ToggleButton
                android:id="@+id/neutralEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/horiz_margin"
                android:textOff="No"
                android:textOn="Yes" />
        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="What can this team do in auto?"
            android:textSize="@dimen/body_text_size" />

        <EditText
            android:id="@+id/autoActions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="auto capabilities"
            android:inputType="text|textCapSentences|textMultiLine|textAutoCorrect" />

    </LinearLayout>

</FrameLayout>
